.mask {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
}

.mask .content {
    background: #fff;
    position: relative;
    width: 580rpx;
    margin: 277rpx auto;
    border-radius: 8rpx;
    padding-bottom: 1px;
}

.mask .content .close {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 15rpx;
    right: 15rpx;
    z-index: 10;
}

.mask .content .txt {
    font-size: 36rpx;
    color: #666666;
    text-align: center;
    padding: 111rpx 55rpx 85rpx;
}

.mask .content .btn {
    display: block;
    margin: 0 auto 50rpx;
    border: 1px solid #CC8F1A;
    border-radius: 100px;
    height: 80rpx;
    width: 468rpx;
    text-align: center;
    color: #CC8F1A;
    font-size: 36rpx;
    line-height: 80rpx;
}